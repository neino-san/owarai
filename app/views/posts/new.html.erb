<div class="d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
      <a class="btn btn-primary" href="/posts">投稿一覧</a>
  </div>
</div>
<%= form_for @post do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
        <%= f.label :ネタの名前 %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :ネタ種類 %>
        <%= f.select :kind, [["漫才", "漫才"], ["コント", "コント"], ["その他", "その他"]] ,class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :ネタ評価 %>
        <%= f.text_area :content, class: 'form-control', rows:10 %>
    </div>
    <div class="form-group">
        <%= f.label :画像 %><br/>
        <%= f.file_field :image, class: "image" %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<div class="d-flex align-items-center">
    <h1>投稿一覧</h1>
    <div class="ml-auto posts_button">
        <a class="btn btn-primary" href="/posts/new" role="button">投稿</a>
    </div>
</div>
<table class="table table-bordered border-dark table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="width: 500px">投稿タイトル</th>
      <th scope="col">ネタの種類</th>
      <th scope="col" style="width: 10px","height: 10px">投稿者</th>
      <th scope="col">投稿日</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><h4><%= post.content %></h4></td>
          <td><%= post.kind %></td>
          <td class="post_icon"><h4><%= post.user.name %></h4></br>
          <% if post.user.image? %>
            <img src=<%= post.user.image %>  width="80" hight="80" >
          <% else %>
            <%= image_tag asset_path('default.png'), :size =>'80x80' %>
          <% end %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to '詳細', post, id: "detail-" + post.id.to_s, class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @posts %>
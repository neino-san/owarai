<h1>ユーザー名</h1>
    <%= link_to(@user.name, user_path(@user))%>
<div class="back-color"><%= @post.content %></div>
<% if @post.image? %>
<%= image_tag @post.image.url %>
<% else %>
 <image src="/assets/default.png" class="icon" alt="ユーザーアイコン" %>
<% end %>
  <div class="p-comment_listTitle">コメント</div>
  <%= render @post.comments %>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
<% if flash[:notice] %>
    <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>
    <% if current_user == @user %>
    <%= link_to '編集', edit_post_path(@post), class: "btn btn-outline-info" %>
    <% end %>
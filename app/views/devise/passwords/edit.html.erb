<div class="index mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto password-edit" style="max-width:600px">
      <h2>パスワード変更</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mt-3">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: 'form-control' %>
        </div>

        <div class="field mt-4 pb-4">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="row password my-4">
          <p>Change<br>your password...</p>
          <%= embedded_svg('password_icon.svg', class: 'password-logo')%>
        </div>

        <div class="actions my-3">
          <%= f.submit "パスワードを変更", class: 'btn btn-primary p-2 w-100' %>
        </div>
      <% end %>

      <%= link_to "ログイン", new_user_session_path, class: 'd-block' %>
      <%= link_to "新規登録", root_path, class: 'd-block' %>

      <%= link_to root_path, data_toggle: 'tooltip', data_placement: 'topdo', title: 'TOP'  do %>
        <%= embedded_svg('timeline.svg', class: "top")%>
      <% end %>
    </div>
  </div>
</div>
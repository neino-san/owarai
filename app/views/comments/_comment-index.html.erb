<div class="comment-wrapper border-top　mb-10">
  <p class="mt-5">コメント一覧</p>
  <table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th>コメント投稿者</th>
      <th>コメント内容</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name if comment.user %><br>
        <td><%= comment.comment %><br>
        <% if comment.user == current_user %>
        　<%= link_to "削除", post_comment_path(@post, comment), method: :delete, class: "btn btn-danger" %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <p>コメント投稿</p>
  <%= render 'comments/comment-form' %>
</div>